<div class="c-home__thoughts">
  <div class="c-home__thoughts__title max-width">
    {{#if search}}
    <h1>Você está buscando por: <span>{{search}}</span></h1>
    {{else}}
    <h1>Feed de pensamentos</h1>
    {{/if}}

    <form class="c-home__thoughts__search" action="/" method="GET">
      <input type="search" name="search" value="{{search}}" placeholder="Procure por um pensamento">
      <input class="btn" type="submit" value="Buscar">
    </form>

    <div class="c-home__thoughts__order">
      <span>Ordenar por:</span>

      <form action="/">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="new">
        <button type="submit">
          <i class="bi bi-arrow-up"></i>
        </button>
      </form>
      <form action="/">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="old">
        <button type="submit">
          <i class="bi bi-arrow-down"></i>
        </button>
      </form>
      <a href="/">Limpar</a>
    </div>
  </div>

  <ul class="c-home__thoughts__posts max-width">
    {{#each thoughts}}
    <li>
      <h2>&#8220;{{this.content}}&#8221;</h2>
      <h3>by <span>{{this.author.name}}</span></h3>
      <ul class="c-home__thoughts__actions">
        <li class="like">
          <a href="/thoughts/{{this.id}}/like">
            <i class="bi bi-heart"></i>
            <span>0</span>
          </a>
        </li>
        <li class="comments">
          <a href="/thoughts/{{this.id}}/comments">
            <i class="bi bi-chat-dots"></i>
            <span>0</span>
          </a>
        </li>
        <li class="favorite">
          <a href="/thoughts/{{this.id}}/favorite">
            <i class="bi bi-star"></i>
            <span>0</span>
          </a>
        </li>
      </ul>
    </li>
    {{/each}}
  </ul>
  {{#if emptyThoughts}}
  <p class="empty">Nenhum pensamento publicado ainda...</p>
  {{/if}}
</div>